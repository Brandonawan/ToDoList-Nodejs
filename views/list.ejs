<%- include('header'); -%>
	<div class="box" id="heading">
		<h1> <%= listTitle %></h1>
	</div>
<div class="box">
		<!--  Set up EJS for loop -->
		<% for(let i = 0; i < newListItems.length; i++) { %>
			<div class="item">
				<input type="checkbox">
				<p><%= newListItems[i] %></p>
			</div>
		  <% } %>
</div>

<form class="items" action="/" method="post">
	<input type="text" name="item" placeholder="New Item" autocomplete="off">

  	<button type="submit" name="list" value=<%= listTitle %> >+</button>
</form>
<%- include('footer'); -%>	
